<div class="container b_container b_container--large">
    {% if (current.tarPackage.sha256sum or current.tarPackage.sha1sum) %}
        <h2>Checksums of TYPO3 {{ current.version }}</h2>
    {% endif %}
    {% if current.tarPackage.sha256sum %}
        <h3>SHA256</h3>
        <pre>
{{ current.tarPackage.sha256sum }} typo3_src-{{ current.version }}.tar.gz
{{ current.zipPackage.sha256sum }} typo3_src-{{ current.version }}.zip</pre>
    {% endif %}
    {% if current.tarPackage.sha1sum %}
        <h3>SHA1</h3>
        <pre>
{{ current.tarPackage.sha1sum }} typo3_src-{{ current.version }}.tar.gz
{{ current.zipPackage.sha1sum }} typo3_src-{{ current.version }}.zip</pre>
    {% endif %}
</div>